<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="3dp"
    tools:context=".StateListItem">

    <TextView
        android:id="@+id/tvState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/archia"
        android:textColor="?attr/stateText"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStNewConfirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/confirmedText"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvStNewActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/activeText"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvStNewRecovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/recoveredText"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvStNewDeaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/deceasedText"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStConfirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/confirmedText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/activeText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStRecovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/recoveredText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStDeaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/archia"
            android:gravity="center_horizontal"
            android:textColor="?attr/deceasedText"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>